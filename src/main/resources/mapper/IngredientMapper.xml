<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.glxxxt.site.dao.IngredientMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.glxxxt.site.entity.Ingredient">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="remaining" property="remaining" />
    </resultMap>

    <select id="getIngredient" resultType="com.glxxxt.site.entity.Ingredient">
        select * from ingredient;
    </select>

    <select id="getNeeded" resultType="com.glxxxt.site.entity.Ingredient">
        select * from ingredient where remaining &lt;= 0.05;
    </select>

    <select id="getNowNum" resultType="BigDecimal">
        select remaining from ingredient where id = #{id}
    </select>

    <update id="updateIngredient" parameterType="com.glxxxt.site.entity.Ingredient">
        update ingredient
        set remaining=#{remaining}
        where id = #{id}
    </update>

    <select id="getName" resultType="String">
        select `name` from ingredient where id=#{id}
    </select>
</mapper>
