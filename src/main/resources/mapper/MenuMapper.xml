<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.glxxxt.site.dao.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.glxxxt.site.entity.Menu">
        <id column="id" property="id" />
        <result column="dishes" property="dishes" />
        <result column="type" property="type" />
        <result column="price" property="price" />
        <result column="available_flag" property="availableFlag" />
    </resultMap>

    <select id="getMenu" resultType="com.glxxxt.site.entity.Menu">
        select * from menu where available_flag = 1 order by type desc
    </select>

    <update id="nodishes" parameterType="com.glxxxt.site.entity.Menu">
        update menu
        set available_flag = 0
        where id = #{id}
    </update>

    <update id="yesdishes" parameterType="com.glxxxt.site.entity.Menu">
        update menu
        set available_flag = 1
        where id = #{id}
    </update>

    <select id="getDishName" resultType="String">
        select dishes from menu where id = #{id}
    </select>
</mapper>
