<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.glxxxt.site.dao.OrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.glxxxt.site.entity.Order">
        <id column="id" property="id" />
        <result column="menu_id" property="menuId" />
    </resultMap>

    <insert id="newOrder" parameterType="com.glxxxt.site.entity.Order">
        insert into `order` (id, menu_id) values (#{id}, #{menu_id})
    </insert>
    <select id="getOrder" resultType="com.glxxxt.site.entity.Order">
        select * from `order`
    </select>
</mapper>
