<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.glxxxt.site.dao.MessageMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.glxxxt.site.entity.Message">
        <result column="id" property="id" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="date" property="date" />
    </resultMap>

    <insert id="addMessage" parameterType="com.glxxxt.site.entity.Message">
        insert into message (title, content, date) values (#{title}, #{content}, #{date})
    </insert>
    <select id="getAll" resultType="com.glxxxt.site.entity.Message">
        select * from message
    </select>
</mapper>
